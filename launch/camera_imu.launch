<launch>
    <arg name="robot_type" default="$(env ROBOT_TYPE)" doc="Robot type [standard, hero, engineer]"/>
    <arg name="filter_type" default="complementary"/>
    <arg name="enable_imu_trigger" default="true"/>

    <include file="$(find galaxy_camera)/launch/MER-139.launch">
        <arg name="enable_imu_trigger" value="$(arg enable_imu_trigger)"/>
    </include>

    <include file="$(find rm_hw)/launch/rm_hw.launch"/>

    <rosparam file="$(find imu_filter_controllers)/config/$(arg filter_type)_controller.yaml" command="load"/>
    <rosparam file="$(find robot_state_controller)/config/config.yaml" command="load"/>
    <rosparam file="$(find rm_chassis_controllers)/config/$(arg robot_type).yaml" command="load"/>
    <rosparam file="$(find rm_orientation_controller)/config/$(arg robot_type).yaml" command="load"/>

    <node name="controller_loader" pkg="controller_manager" type="controller_manager" output="screen"
          args="load
          controllers/joint_state_controller
          controllers/robot_state_controller
          controllers/chassis_controller
          controllers/imu_filter_controller
          controllers/orientation_controller
   "/>
</launch>